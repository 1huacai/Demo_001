#------------------ 比赛 60 - 89 start ------------------
# 方块信息
.block_info {
    row                     0 : integer # 行
    col                     1 : integer # 列
    shape                   2 : integer # 类型
    state                   3 : integer # 状态
    frame                   4 : integer # 状态帧计数
}

# 请求比赛信息
game_info 60 {
    request {}
    response {
        e                   0 : integer
        frame               1 : integer # 当前逻辑帧
        blocks              2 : *block_info # 方块区所有方块
    }
}

# 准备开始（开始倒计时结束）
game_ready 61 {
    request {}
    response {
        e                   0 : integer
    }
}

# 交换方块操作
game_swap 65 {
    request {
        frame               0 : integer # 当前逻辑帧
        block1              1 : block_info # 交换方块1
        block2              2 : block_info # 交换方块2
    }
    response {
        e                   0 : integer
    }
}

# 提升一行操作
game_raise 66 {
    request {
        frame               0 : integer # 当前逻辑帧
    }
    response {
        e                   0 : integer
    }
}

# 匹配消除
game_matched 67 {
    request {
        frame               0 : integer # 当前逻辑帧
        matched_blocks      2 : *block_info # 匹配待消除的方块列表
    }
    response {
        e                   0 : integer
    }
}

# 生成新的一行方块
game_new_row 68 {
    request {
        frame               0 : integer # 当前逻辑帧
    }
    response {
        e                   0 : integer
        row_blocks          1 : *block_info # 一行方块列表
    }
}

# 回退操作
game_rollback 75 {
    request {
        frame               0 : integer # 当前逻辑帧
    }
    response {
        e                   0 : integer
    }
}

# 玩家退出比赛（认输）操作
game_give_up 80 {
    request {
        frame               0 : integer # 当前逻辑帧
    }
    response {
        e                   0 : integer
    }
}

# 游戏结束
game_over 81 {
    request {
        frame               0 : integer # 当前逻辑帧
    }
    response {
        e                   0 : integer
    }
}
#------------------ 比赛 60 - 89 end ------------------


