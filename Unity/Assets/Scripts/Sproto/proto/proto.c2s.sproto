#------------------ 登录 20 - 39 start ------------------
# 登陆游戏
auth 20 {
    request {
        imei                0 : string
        version             1 : string
    }
    response {
        e                   0 : integer
        rid                 1 : string
        server_time         2 : integer
    }
}

# 登陆游戏
login 21 {
    request {
        rid                 0 : string
    }
    response {
        e                   0 : integer
        rname               1 : string # 角色名
        render              2 : integer # 角色外观ID
    }
}
#------------------ 登录 20 - 39 end ------------------


